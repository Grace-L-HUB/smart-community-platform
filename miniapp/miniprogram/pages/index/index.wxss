/* 首页样式 */
.container {
  background-color: #F6F6F6;
  min-height: 100vh;
  padding-bottom: 60rpx;
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.logo {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.header-right {
  display: flex;
  align-items: center;
}

.icon {
  width: 44rpx;
  height: 44rpx;
  margin-left: 30rpx;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user-info {
  flex: 1;
  margin-left: 30rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.user-address {
  font-size: 26rpx;
  color: #666666;
}

.user-role {
  background-color: #E6F7F2;
  color: #1DA57A;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
}

/* 快速服务 */
.quick-service {
  display: flex;
  background-color: #FFFFFF;
  margin: 0 20rpx 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.service-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.service-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15rpx;
}

.repair-icon {
  background-color: #FFF2F0;
}

.announcement-icon {
  background-color: #FFFBE6;
}

.payment-icon {
  background-color: #F0F5FF;
}

.merchant-icon {
  background-color: #F0FFF4;
}

.icon-text {
  font-size: 48rpx;
}

.service-name {
  font-size: 26rpx;
  color: #666666;
}

/* 通用区块样式 */
.section {
  background-color: #FFFFFF;
  margin: 0 20rpx 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.section-more {
  font-size: 26rpx;
  color: #999999;
}

/* 社区公告列表 */
.announcement-list {
  padding-top: 10rpx;
}

.announcement-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.announcement-item:last-child {
  border-bottom: none;
}

.announcement-content {
  flex: 1;
  display: flex;
  align-items: center;
}

.announcement-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-right: 15rpx;
  background-color: #FFF1F0;
  color: #FF4D4F;
}

.announcement-title {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.announcement-time {
  font-size: 24rpx;
  color: #999999;
  margin-left: 20rpx;
}

/* 物业报修 */
.repair-reminder {
  display: flex;
  align-items: center;
  background-color: #FFF7E6;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.reminder-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.reminder-text {
  font-size: 28rpx;
  color: #FA8C16;
}

.repair-item {
  padding: 20rpx 0;
}

.repair-desc {
  font-size: 28rpx;
  color: #333333;
}
