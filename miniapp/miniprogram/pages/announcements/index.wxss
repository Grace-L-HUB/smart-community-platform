/* 公告页面样式 */
.container {
  background-color: #F6F6F6;
  min-height: 100vh;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 92rpx;
  background-color: #FFFFFF;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
}

.back-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  color: #333333;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.right-space {
  width: 60rpx;
}

/* 公告列表 */
.announcement-list {
  padding: 100rpx 20rpx 20rpx 20rpx;
}

.announcement-item {
  background-color: #FFFFFF;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.announcement-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.announcement-tag {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 14rpx;
  font-weight: 500;
}

.announcement-tag.urgent {
  background-color: #FFF1F0;
  color: #FF4D4F;
}

.announcement-tag.activity {
  background-color: #FFFBE6;
  color: #FA8C16;
}

.announcement-tag.normal {
  background-color: #F0F5FF;
  color: #1890FF;
}

.announcement-time {
  font-size: 24rpx;
  color: #999999;
}

.announcement-content {
  padding-top: 10rpx;
}

.announcement-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.announcement-body {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.announcement-body text {
  display: block;
  margin-bottom: 16rpx;
}

.announcement-body text:last-child {
  margin-bottom: 0;
}