<!-- 个人中心页面 -->
<view class="container">
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <view class="avatar-container">
      <image class="avatar" src="{{userInfo.avatar || '/images/avatar.svg'}}" mode="aspectFill"></image>
    </view>
    <view class="user-info">
      <view class="user-name">{{userInfo.name || '用户昵称'}}</view>
      <view class="user-role">{{userInfo.role || '业主'}}</view>
    </view>
    <view class="arrow-icon" bindtap="goToUserInfo">
      <text>›</text>
    </view>
  </view>

  <!-- 社区信息 -->
  <view class="community-info">
    <view class="community-item">
      <text class="community-label">小区：</text>
      <text class="community-value">{{userInfo.community || '幸福里社区'}}</text>
    </view>
    <view class="community-item">
      <text class="community-label">楼栋：</text>
      <text class="community-value">{{userInfo.building || '1栋'}}</text>
    </view>
    <view class="community-item">
      <text class="community-label">房号：</text>
      <text class="community-value">{{userInfo.room || '101室'}}</text>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section">
    <view class="menu-item" bindtap="goToOrders">
      <view class="menu-left">
        <text class="menu-icon">📋</text>
        <text class="menu-text">我的报修</text>
      </view>
      <view class="menu-right">
        <text class="menu-count">{{orderCount || 0}}</text>
        <text class="menu-arrow">›</text>
      </view>
    </view>
    
    <view class="menu-item" bindtap="goToPayment">
      <view class="menu-left">
        <text class="menu-icon">💳</text>
        <text class="menu-text">缴费记录</text>
      </view>
      <view class="menu-right">
        <text class="menu-arrow">›</text>
      </view>
    </view>
    
    <view class="menu-item" bindtap="goToServices">
      <view class="menu-left">
        <text class="menu-icon">🛠️</text>
        <text class="menu-text">物业服务</text>
      </view>
      <view class="menu-right">
        <text class="menu-arrow">›</text>
      </view>
    </view>
    
    <view class="menu-item" bindtap="goToFeedback">
      <view class="menu-left">
        <text class="menu-icon">💬</text>
        <text class="menu-text">意见反馈</text>
      </view>
      <view class="menu-right">
        <text class="menu-arrow">›</text>
      </view>
    </view>
  </view>

  <!-- 设置与帮助 -->
  <view class="menu-section">
    <view class="menu-item" bindtap="goToSettings">
      <view class="menu-left">
        <text class="menu-icon">⚙️</text>
        <text class="menu-text">设置</text>
      </view>
      <view class="menu-right">
        <text class="menu-arrow">›</text>
      </view>
    </view>
    
    <view class="menu-item" bindtap="goToAbout">
      <view class="menu-left">
        <text class="menu-icon">ℹ️</text>
        <text class="menu-text">关于我们</text>
      </view>
      <view class="menu-right">
        <text class="menu-arrow">›</text>
      </view>
    </view>
  </view>

  <!-- 退出登录按钮 -->
  <button class="logout-btn" bindtap="logout">退出登录</button>

  <!-- 版本信息 -->
  <view class="version-info">
    版本 1.0.0
  </view>
</view>