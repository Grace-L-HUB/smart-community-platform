/* 个人中心页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.avatar-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #f0f0f0;
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.user-info {
  flex: 1;
  margin-left: 30rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 10rpx;
}

.user-role {
  font-size: 28rpx;
  color: #999999;
}

.arrow-icon {
  width: 60rpx;
  display: flex;
  justify-content: center;
}

.arrow-icon text {
  font-size: 40rpx;
  color: #c8c8c8;
  font-weight: bold;
}

/* 社区信息 */
.community-info {
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  border-top: 2rpx solid #f0f0f0;
  border-bottom: 2rpx solid #f0f0f0;
}

.community-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
}

.community-label {
  font-size: 28rpx;
  color: #666666;
  width: 120rpx;
}

.community-value {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

/* 功能菜单 */
.menu-section {
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  font-size: 32rpx;
  color: #333333;
}

.menu-right {
  display: flex;
  align-items: center;
}

.menu-count {
  font-size: 26rpx;
  color: #1989fa;
  margin-right: 10rpx;
  background-color: #f0f9ff;
  padding: 4rpx 15rpx;
  border-radius: 15rpx;
}

.menu-arrow {
  font-size: 36rpx;
  color: #c8c8c8;
  font-weight: bold;
}

/* 退出登录按钮 */
.logout-btn {
  margin: 40rpx 30rpx;
  background-color: #ffffff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
  border-radius: 10rpx;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.logout-btn:active {
  background-color: #fff1f0;
}

/* 版本信息 */
.version-info {
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  margin-top: 20rpx;
}